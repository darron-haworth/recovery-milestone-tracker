rules_version = '2';

// Firebase Storage security rules
service firebase.storage {
  match /b/{bucket}/o {
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Allow users to read/write their own profile images
    match /users/{userId}/profile/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read/write their own milestone images
    match /users/{userId}/milestones/{milestoneId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read/write their own recovery group images
    match /users/{userId}/recovery-groups/{groupId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read/write their own support message attachments
    match /users/{userId}/support-messages/{messageId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read/write shared images in recovery groups
    // Note: This requires additional validation in your app logic
    match /recovery-groups/{groupId}/shared/{fileName} {
      allow read, write: if request.auth != null;
    }
  }
}
